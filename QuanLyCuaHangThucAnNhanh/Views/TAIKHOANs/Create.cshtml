@model QuanLyCuaHangThucAnNhanh.Models.TAIKHOAN

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-header">
    <h2 class="title">Tạo tại khoản</h2>
   
</div>

@using (Html.BeginForm("Create", "TAIKHOANs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="table">
        <div class="card-body" >
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group1">
                        <p class="tieude">ID tài khoản</p>
                        @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", @readonly = "readonly", style = "background:white" } })
                        @Html.HiddenFor(model => model.ID)
                        @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group1">
                        <p class="tieude">Mã nhân viên</p>
                        @Html.DropDownList("MaNhanVien", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MaNhanVien, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group1">
                        <p class="tieude">Tên tài khoản</p>
                        @Html.EditorFor(model => model.TenTaiKhoan, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenTaiKhoan, "", new { @class = "text-danger" })

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group1">
                        <p class="tieude">Quyền truy cập</p>
                        @Html.DropDownList("MaQuyen", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MaQuyen, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group1">
                        <p class="tieude">Mật khẩu</p>
                        @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })

                    </div>
                </div>
            </div>
       
            <div class="form-group1">
                <div class="col-md-offset-2 col-md-10">
                    <input class="btn inp" type="submit" value="Create" />
                </div>
            </div>
        </div>
    </div>
}