@model IEnumerable<QuanLyCuaHangThucAnNhanh.Models.NHANVIEN>
@using QuanLyCuaHangThucAnNhanh.Models;


@{
    ViewBag.Title = "Index";
}

<h2 class="title">Nhân viên</h2>

<div class="row">
    <div class="col-sm-12">
        <div class="table-responsive">
            <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.css">
            <table id="example" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Mã nhân viên
                        </th>
                        <th>
                            Họ nhân viên
                        </th>
                        <th>
                            Tên nhân viên
                        </th>
                        <th>
                            Số điện thoại
                        </th>
                        <th>
                            Ngày sinh
                        </th>
                        <th>
                            Giới tính
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaNhanVien)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HoNhanVien)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenNhanVien)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SDT)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgaySinh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GioiTinh)
                            </td>
                            <td>
                                @Html.ActionLink("Sửa", "Edit", new { id = item.MaNhanVien.Trim() }) |
                                @Html.ActionLink("Xóa", "Delete", new { id = item.MaNhanVien.Trim() })
                            </td>
                        </tr>


                    }
                </tbody>

            </table>

            <a class="btn btn-success btn-sm" style="float:right" href="@Url.Action("Create", "NHANVIENs")">Thêm</a>

    
            <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
            <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>

            <script>
                $(document).ready(function () {
                    $('#example').DataTable({
                        "pagingType": "full_numbers"
                    });
                });
            </script>

        </div>
    </div>
</div>


